<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="TextView" />

    <TextView
        android:id="@+id/item_tv_dataDo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="TextView"
        android:layout_alignBaseline="@+id/item_tv_kategoria"
        android:layout_alignBottom="@+id/item_tv_kategoria"
        android:layout_alignLeft="@+id/item_tv_name"
        android:layout_alignStart="@+id/item_tv_name" />

    <TextView
        android:id="@+id/item_tv_kategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="TextView"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/item_tv_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />

    <TextView
        android:id="@+id/item_tv_opis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        tools:text="TextView"
        android:layout_below="@+id/item_tv_dataDo"
        android:layout_alignLeft="@+id/item_tv_dataDo"
        android:layout_alignStart="@+id/item_tv_dataDo" />
</RelativeLayout>