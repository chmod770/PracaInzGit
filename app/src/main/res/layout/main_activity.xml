<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Button
        android:id="@+id/btn_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_settings"
        android:layout_alignStart="@+id/btn_settings"
        android:layout_below="@+id/btn_aims"
        android:layout_marginBottom="2sp"
        android:background="@color/colorPrimary"
        android:onClick="buttonOnClick"
        android:text="Kalendarz"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvData"
        android:layout_marginBottom="2sp"
        android:layout_marginTop="70dp"
        android:background="@color/colorPrimary"
        android:onClick="buttonOnClick"
        android:text="Ustawienia"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btn_aims"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_settings"
        android:layout_marginBottom="2sp"
        android:background="@color/colorPrimary"
        android:onClick="buttonOnClick"
        android:text="Moje Cele"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/tvData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="0.36"
        android:text="Witaj! "
        android:textAlignment="center"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_calendar"
        android:layout_marginBottom="2sp"
        android:background="@color/colorPrimary"
        android:onClick="buttonOnClick"
        android:text="Mój Dzień"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btn_tasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_statistics"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2sp"
        android:background="@color/colorPrimary"
        android:onClick="buttonOnClick"
        android:text="Taski"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btn_statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_day"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2sp"
        android:background="@color/colorPrimary"
        android:onClick="buttonOnClick"
        android:text="Statystyki"
        android:textColor="#fff" />


</RelativeLayout>