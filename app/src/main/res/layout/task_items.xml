<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">


    <TextView
        android:id="@+id/item_tv_nazwa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Nazwa"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/item_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_tv_nazwa"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/item_tv_nazwa"
        android:layout_toRightOf="@+id/item_tv_nazwa"
        android:text="DD-MM-YYYY"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Czas"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/item_tv_date"
        android:layout_alignBottom="@+id/item_tv_date"
        android:layout_toRightOf="@+id/item_tv_date"
        android:layout_toEndOf="@+id/item_tv_date"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp" />

    <CheckBox
        android:id="@+id/item_cb_czyZrobione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:textSize="0sp"
        android:layout_alignBottom="@+id/item_tv_time"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>